<h1>AUTHORS UPDATE</h1>

<%= link_to "Back to profile", @author %>

<%= form_for( @author ) do | f | %>

  <%= f.label :profile_image, "Profile Image" %><br>
  <%= image_tag @author.profile_image %><br>
  <%= f.file_field :profile_image, accept: 'image/png, image/gif, image/jpeg' %><br>

  <%= f.label :banner_image, "Banner Image" %><br>
  <%= image_tag @author.banner_image %><br>
  <%= f.file_field :banner_image, accept: 'image/png, image/gif, image/jpeg' %><br>

  <p>username: <%= @author.username %></p>
  <p>email: <%= @author.email %></p>

  <%= f.label :bio, "About #{ @author.username }:" %><br>
  <%= f.text_area :bio %><br>

  <%= f.label :location, "Location:" %>
  <%= f.text_field :location %><br>

  <%= f.submit "Save" %>
<% end %>