<h1>AUTHORS UPDATE</h1>

<%= link_to "Back to profile", @author %>

<p>( profile photo )</p>
<p>username: <%= @author.username %></p>
<p>email: <%= @author.email %></p>

<%= form_for( @author ) do | f | %>

  <%= f.label :bio, "About #{ @author.username }:" %><br>
  <%= f.text_area :bio %><br>

  <%= f.label :location, "Location:" %>
  <%= f.email_field :location %><br>

  <%= f.submit "Save" %>
<% end %>