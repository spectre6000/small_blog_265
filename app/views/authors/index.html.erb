<h1 class="h1">All authors</h1>

<% if current_author && current_author.admin? %>
  <span> | <%= link_to 'invite new author', new_author_invitation_path %></span>
<% end %>

<ul>
  <%@authors.each do | author | %>
    <% if author.confirmed? %>
      <div>
        <span><%= link_to image_tag( author.profile_image( :index_profile ), :class => "index_profile" ), author  %></span>
        <span><%= image_tag author.banner_image( :index_banner ), class: "index_banner" %></span>
        <span><%= link_to author.username, author %></span>
        <span><%= author.email %></span>
        <% if current_author && current_author.admin? && author.id != current_author.id && !author.admin?%>
          <span>
            <%= link_to( "delete", author, method: :delete, data: { confirm: "Are you sure?" } ) %>
             | 
            <%= link_to( "make admin", author_toggle_admin_path( :author_id => author.id, :id => author.id ), :action => 'toggle_admin', method: :patch ) %>
          </span>
        <% end %>
      </div>
    <% end %>
  <% end %>
</ul>

<%= will_paginate %>
