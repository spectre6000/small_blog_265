<h1 class="h1">All authors</h1>

<% if author_signed_in? %>
  <span><%= link_to "sign out", destroy_author_session_path, method: :delete %></span>
<% else %>
  <span><%= link_to "sign in", new_author_session_path %></span>
<% end %>

<% if current_author && current_author.admin? %>
  <span> | <%= link_to 'invite new author', new_author_invitation_path %></span>
<% end %>

<%= will_paginate %>

<ul>
  <%@authors.each do | author | %>
    <% if author.confirmed? %>
      <div>
        <span>author profile image</span>
        <span>author banner image</span>
        <span><%= link_to author.username, author %></span>
        <span><%= author.email %></span>
        <% if current_author && current_author.admin? %>
          <span><%= link_to "delete", author, method: :delete, data: { confirm: "Are you sure?" } %> | make admin</span>
        <% end %>
      </div>
    <% end %>
  <% end %>
</ul>

<%= will_paginate %>
