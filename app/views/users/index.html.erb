<h1 class="h1">All users</h1>

<% if current_user && current_user.admin? %>
  <span><%= link_to 'invite new user', new_user_invitation_path %></span>
<% end %>

<ul>
  <%@users.each do | user | %>
    <div>
      <span><%= link_to image_tag( user.profile_image( :index_profile ), :class => "index_profile" ), user  %></span>
      <span><%= image_tag user.banner_image( :index_banner ), class: "index_banner" %></span>
      <span><%= link_to user.username, user %></span>
      <span><%= user.email %></span>
      <% if current_user && current_user.admin? && user.id != current_user.id && !user.admin?%>
        <span>
          <%= link_to( "delete", user, method: :delete, data: { confirm: "Are you sure?" } ) %>
           | 
          <%= link_to( "make admin", user_toggle_admin_path( :user_id => user.id, :id => user.id ), :action => 'toggle_admin', method: :patch ) %>
        </span>
      <% end %>
    </div>
  <% end %>
</ul>

<%= will_paginate %>
